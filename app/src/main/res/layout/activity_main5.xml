<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity3">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView40"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/kodemono_semibold"
                android:paddingLeft="25dp"
                android:paddingTop="30dp"
                android:text="WHAT IS WEB DEV?"
                android:textSize="30dp" />

            <ImageView
                android:id="@+id/imageView40"
                android:layout_width="250dp"
                android:layout_height="173dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                app:srcCompat="@drawable/web_dev" />


            <TextView
                android:id="@+id/textView41"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/montserrat_extralightitalic"
                android:padding="20dp"
                android:text="Web Development is the process of creating and maintaining websites and web applications that run in browsers. It includes everything from building simple static pages to complex, interactive platforms like e-commerce sites, social networks, or SaaS tools."
                android:textSize="18dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView41"
                    android:layout_width="30dp"
                    android:layout_height="30dp"

                    app:srcCompat="@drawable/dot_8265301" />

                <TextView
                    android:id="@+id/textView42"
                    android:textSize="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:fontFamily="@font/bebasneue_regular"
                    android:paddingEnd="10dp"
                    android:text="Responsive Design – Works across devices (desktop, tablet, mobile)." />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView42"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:srcCompat="@drawable/dot_8265301" />

                <TextView
                    android:id="@+id/textView43"
                    android:textSize="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:fontFamily="@font/bebasneue_regular"
                    android:paddingEnd="10dp"
                    android:text="E-commerce – Amazon, Flipkart, Shopify." />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView43"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:srcCompat="@drawable/dot_8265301" />

                <TextView
                    android:id="@+id/textView44"
                    android:textSize="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/bebasneue_regular"
                    android:paddingEnd="10dp"
                    android:padding="5dp"
                    android:text="Healthcare – Telemedicine portals, appointment booking." />
            </LinearLayout>

            <TextView
                android:id="@+id/textView45"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/kodemono_semibold"
                android:paddingLeft="30dp"
                android:text="POPULAR TOOLS"
                android:textSize="30dp" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="408dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView9"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="20dp"
                    app:cardCornerRadius="30dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/imageView45"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/html" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView10"
                    app:cardCornerRadius="30dp"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginStart="40dp"
                    app:layout_constraintBottom_toBottomOf="@+id/cardView9"
                    app:layout_constraintStart_toEndOf="@+id/cardView9"
                    app:layout_constraintTop_toTopOf="@+id/cardView9"
                    app:layout_constraintVertical_bias="1.0" >

                    <ImageView
                        android:id="@+id/imageView46"
                        android:layout_gravity="center"
                        android:layout_width="180dp"
                        android:layout_height="160dp"
                        app:srcCompat="@drawable/css" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView11"
                    app:cardCornerRadius="30dp"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="44dp"
                    app:layout_constraintEnd_toEndOf="@+id/cardView9"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/cardView9"
                    app:layout_constraintTop_toBottomOf="@+id/cardView9" >

                    <ImageView
                        android:id="@+id/imageView47"
                        android:layout_gravity="center"
                        android:layout_width="180dp"
                        android:layout_height="180dp"
                        app:srcCompat="@drawable/java" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView12"
                    app:cardCornerRadius="30dp"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="44dp"
                    app:layout_constraintEnd_toEndOf="@+id/cardView10"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/cardView10"
                    app:layout_constraintTop_toBottomOf="@+id/cardView10" >

                    <ImageView
                        android:id="@+id/imageView48"
                        android:layout_gravity="center"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        app:srcCompat="@drawable/sql" />
                </androidx.cardview.widget.CardView>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>