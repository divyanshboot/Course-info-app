<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity3">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView50"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/kodemono_semibold"
                android:paddingLeft="15dp"
                android:paddingTop="30dp"
                android:text="WHAT IS MACHINE LEARNING ?"
                android:textSize="25dp" />

            <ImageView
                android:id="@+id/imageView50"
                android:layout_width="250dp"
                android:layout_height="173dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                app:srcCompat="@drawable/machinelearning" />


            <TextView
                android:id="@+id/textView51"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/montserrat_extralightitalic"
                android:padding="20dp"
                android:text="Machine Learning is a branch of Artificial Intelligence (AI) that enables computers to learn from data and make predictions, classifications, or decisions without being explicitly programmed.

Instead of writing rules manually, we feed the system data + algorithms, and the machine finds patterns or rules automatically."
                android:textSize="18dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView51"
                    android:layout_width="30dp"
                    android:layout_height="30dp"

                    app:srcCompat="@drawable/dot_8265301" />

                <TextView
                    android:id="@+id/textView52"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/bebasneue_regular"
                    android:padding="5dp"
                    android:paddingEnd="10dp"
                    android:text="Natural Language Processing (NLP) – Chatbots, translation, sentiment analysis."
                    android:textSize="16dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView52"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:srcCompat="@drawable/dot_8265301" />

                <TextView
                    android:id="@+id/textView53"
                    android:textSize="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:fontFamily="@font/bebasneue_regular"
                    android:paddingEnd="10dp"
                    android:text="Computer Vision – Image recognition, surveillance, AR/VR apps." />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView53"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:srcCompat="@drawable/dot_8265301" />

                <TextView
                    android:id="@+id/textView54"
                    android:textSize="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/bebasneue_regular"
                    android:paddingEnd="10dp"
                    android:padding="5dp"
                    android:text="Security – Spam filters, malware detection, facial recognition." />
            </LinearLayout>

            <TextView
                android:id="@+id/textView55"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/kodemono_semibold"
                android:paddingLeft="30dp"
                android:text="POPULAR TOOLS"
                android:textSize="30dp" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="408dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView13"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="20dp"
                    app:cardCornerRadius="30dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/imageView55"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/scikitlearn" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView14"
                    app:cardCornerRadius="30dp"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginStart="40dp"
                    app:layout_constraintBottom_toBottomOf="@+id/cardView13"
                    app:layout_constraintStart_toEndOf="@+id/cardView13"
                    app:layout_constraintTop_toTopOf="@+id/cardView13"
                    app:layout_constraintVertical_bias="1.0" >

                    <ImageView
                        android:id="@+id/imageView56"
                        android:layout_gravity="center"
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        app:srcCompat="@drawable/tesorflow" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView15"
                    app:cardCornerRadius="30dp"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="44dp"
                    app:layout_constraintEnd_toEndOf="@+id/cardView13"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/cardView13"
                    app:layout_constraintTop_toBottomOf="@+id/cardView13" >

                    <ImageView
                        android:id="@+id/imageView57"
                        android:layout_gravity="center"
                        android:layout_width="180dp"
                        android:layout_height="180dp"
                        app:srcCompat="@drawable/pytorch" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView16"
                    app:cardCornerRadius="30dp"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="44dp"
                    app:layout_constraintEnd_toEndOf="@+id/cardView14"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/cardView14"
                    app:layout_constraintTop_toBottomOf="@+id/cardView14" >

                    <ImageView
                        android:id="@+id/imageView58"
                        android:layout_gravity="center"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        app:srcCompat="@drawable/spacy" />
                </androidx.cardview.widget.CardView>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>